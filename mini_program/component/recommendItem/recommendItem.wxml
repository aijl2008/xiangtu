<!--component/recommendItem/recommendItem.wxml-->
<view class="recommend-item-contaienr">
  <view class="user-msg-container">
    <image class="header" src="{{recommend.avatar}}"></image>

    <view class="detail-container">
      <text class="nick-name">{{recommend.nickname}}</text>
      <text class="msg">视频数{{recommend.uploaded_number}} · 粉丝{{recommend.be_followed_number}}</text>
    </view>

    <block wx:if="{{!recommend.followed}}">
      <view class="follow-btn" bindtap="followUser">+关注</view>
    </block>
  </view>

  <block wx:if="{{recommend.video.length}}">
    <view class="video-list-container">
      <block wx:for="{{recommend.video}}" :key="id">
        <image class="video-item" src="{{item.cover_url}}" bindtap="jumpVideoDetail" data-id="{{item.id}}"></image>
      </block>
    </view>
  </block>

</view>
