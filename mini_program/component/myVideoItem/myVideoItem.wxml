<!--component/myVideoItem/myVideoItem.wxml-->
<view class="my-video-item-container">
    <view class="my-video-container">
        <block wx:if="{{loaded}}">
            <image class="my-video-image" mode="widthFix" src="{{video.cover_url}}" bindtap="videoPlay" data-id="{{video.id}}"></image>
        </block>
        <block wx:else>
            <image class="my-video-image" mode="widthFix" src="/images/video_cover_720_480.png" bindtap="videoPlay" data-id="{{video.id}}"></image>
        </block>
        <text class="my-video-title">{{video.title}}</text>
        <block wx:if="{{video.status == 1}}">
            <view class="my-video-detail-container">
                <text class="total-looked-number">{{video.played_number}}</text>
                <text class="total-time">{{video.played_number}}</text>
            </view>
        </block>
    </view>
    <view class="bottom-message-container">
        <block wx:if="{{video.status == 1}}">
            <!--点击该区域进入详情-->
            <view class="seat" catchtap="goVideoDetail"></view>
            <!--收藏数-->
            <view class="message-container" catchtap="changeCollection" data-id="{{video.id}}" data-index="{{index}}">
                <image class="icon" src="/images/liked.png"></image><text class="number">{{video.liked_number}}</text>
            </view>
            <!--分享给好友-->
            <button class="message-container" open-type="share" plain hover-class="none" hover-stop-propagation
                    data-id="{{video.id}}" data-title="{{video.title}}" data-cover="{{video.cover_url}}">
                <image class="icon" src="/images/icon48_wx_logo.png"></image>
                <text class="number">{{video.shared_wechat_number}}</text>
            </button>
            <!--分享到朋友圈-->
            <button class="message-container" catchtap="saveVideoToAlbum" plain hover-class="none" hover-stop-propagation
                    data-id="{{video.id}}">
                <image class="icon" src="/images/icon_res_download_moments.png"></image>
                <text class="number">{{video.shared_moment_number}}</text>
            </button>
        </block>
        <block wx:else>
            <view class="readying">视频正在审核中</view>
        </block>
    </view>
</view>
